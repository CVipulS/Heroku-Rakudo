#!/usr/bin/env bash
echo "export LD_LIBRARY_PATH=\"\$LD_LIBRARY_PATH:/app/vendor/rakudo/lib\";" > $1/.profile.d/mybuildpack-defaults.sh
echo "export PATH=\"\$PATH:\$HOME/vendor/rakudo/bin\";" >> $1/.profile.d/mybuildpack-defaults.sh
echo "export PATH=\"\$PATH:\$HOME/vendor/rakudo/languages/perl6/site/bin\";" >> $1/.profile.d/mybuildpack-defaults.sh
echo "export PATH=\"\$PATH:\$HOME/vendor/rakudo/share/perl6/site/bin\";" >> $1/.profile.d/mybuildpack-defaults.sh
echo "Rakudo PERL6"
exit 0
